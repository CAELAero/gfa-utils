{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "es6",
      "esnext"
    ],
    "module": "esnext",
    "esModuleInterop": true,
    "outDir": "build/lib",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
